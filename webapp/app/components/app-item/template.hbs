{{#unless isUnpublished}}
<div class='app-item-block link' {{ action "toggleSingleTab" application.alias }}>
  <div class='app-item part1'>
    {{#if application.iconContent}}
      <img class='applications-icon' src="data:image/png;base64, {{ application.iconContent}}">
    {{else}}
      <i class='material-icons'>video_label</i>
    {{/if}}
  </div>
  <div class='app-item part2'>
    {{#if session.user.isAdmin}}
      {{#edit-text
        textInput=application.displayName
        onClose="submitEditName" }}
        <span class='link'>{{application.displayName}}</span>
      {{/edit-text}}
    {{else}}
        <span class='link'>{{application.displayName}}</span>
    {{/if}}
  </div>
  <div class='app-item part3'>
    {{#if session.user.isAdmin}}
      {{#if unpublishState}}
        {{ fa-icon "spinner" spin=true}}
      {{else}}
        <span class='link' {{ action "unpublish" bubbles=false }}>Unpublish</span>
      {{/if}}
    {{/if}}
  </div>
</div>
{{/unless}}
