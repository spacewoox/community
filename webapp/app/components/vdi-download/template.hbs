{{#if stateVisible}}
  {{ dim-background preventAction=isPublishing toggleWindow=toggleWindow action="toggleVdiWindow" }}
{{/if}}
{{#vdi-window
  title="Download"
  windowClass="vdi-download"
  stateVisible=stateVisible}}

  <div class='content-wrapper'>
    {{#each items as |file|}}
      {{#unless file.isDir}}
        {{ file-item file=file download="downloadFile" }}
      {{/unless}}
    {{/each}}
  </div>
{{/vdi-window}}
