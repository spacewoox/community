
<div class="global-container">
  <div class="sidebar bg-faded">
    <div class="sidebar-content">
      <div class="top-nav">
        <div class="sidebar-logo"></div>
        <ul class="nav">
          <li>
            {{#link-to 'protected.machines'}}
              <span class="icon">
                <i class="material-icons">desktop_windows</i>
              </span>
              Machines
            {{/link-to}}
          </li>

          <li>
            {{#link-to 'protected.applications'}}
              <span class="icon">
                <i class="material-icons">apps</i>
              </span>
              Applications
            {{/link-to}}
          </li>

          <li>
            <a href="#">
              <span class="icon">
                <i class="material-icons">insert_drive_file</i>
              </span>
              Drive
            </a>
          </li>

          <li>
            {{#link-to 'protected.users'}}
              <span class="icon">
                <i class="material-icons">group</i>
              </span>
              Users
            {{/link-to}}
          </li>
        </ul>
      </div>
      <div class="bottom-nav">
        <ul class="nav">
          <li>
            <button {{action "invalidateSession"}} type="button">
              <i class="material-icons">power_settings_new</i>
              Logout
            </button>
          </li>
        </ul>
      </div>
    </div>
  </div>

  <div class="main-content {{if showSidebar "show-sidebar"}}">
    <nav class="main-navbar navbar navbar-light bg-faded">
      <button {{action "toggleSidebar"}} class="navbar-toggler hidden-lg-up" type="button">
        &#9776;
      </button>
      <ul class="nav navbar-nav pull-xs-right">
        <li class="nav-item">
        <a class="nav-link" >{{session.user.first-name}} {{session.user.last-name}}</a>
        </li>
      </ul>
    </nav>

    <li cass="nav-item">
      <button {{ action "toggleSingleTab" }}>Toggle single tab</button>
    </li>

    {{outlet}}

  </div>
</div>

{{#single-tab isVisible=showSingleTab}}
  {{remote-session connectionName=connectionName}}
{{/single-tab}}
